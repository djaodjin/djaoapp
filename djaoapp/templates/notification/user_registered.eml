{% extends "notification/base.eml" %}

{% block subject %}
{% trans broker=broker.printable_name|safe %}A user has registered for {{broker}}{% endtrans %}
{% endblock %}

{% block plain_content %}
{% trans user=user.printable_name, email=user.email %}New registered user {{user}} with email {{email}}.{% endtrans %}
{% endblock %}

{% block html_content %}
<h3>{% trans broker=broker.printable_name %}Awesome, a new user signed up on your {{broker}} site!{% endtrans %}</h3>
<p>
{% trans %}Full name{% endtrans %}: <b>{{user.printable_name}}</b>
<br>
{% trans %}Username{% endtrans %}: <b>{{user.username}}</b>
<br>
{% trans %}Email{% endtrans %}: {{user.email}}
</p>
{% endblock %}
