{% extends "notification/base.eml" %}

{% block subject %}
{% trans %}Email address verification{% endtrans %}
{% endblock %}

{% block html_content %}
<div>
  <h3>{% trans %}Verify your email address{% endtrans %}</h3>
  {% if user %}
  <p>{% trans user=user.nick_name %}Hello {{user}}{% endtrans %},</p>
  {% else %}
  <p>{% trans %}Hello{% endtrans %},</p>
  {% endif %}
  <p>
{% trans provider=broker.printable_name %}Your e-mail address must be verified before going further with {{provider}}.{% endtrans %}
  </p>
  {% if back_url %}
  <p>
{% trans %}Please verify your email address by visiting the following URL in your favorite browser{% endtrans %}:<br />
<a href="{{back_url}}">{{back_url}}</a>
  </p>
  <p>
{% trans lifetime=lifetime %}The link is valid for {{lifetime}}.{% endtrans %}
  </p>
  {% else %}
  <p>
{% trans %}Please verify your email address by entering the following code:{% endtrans %}: {{code}}
  </p>
  {% if lifetime %}
  <p>
{% trans lifetime=lifetime %}The code is valid for {{lifetime}}.{% endtrans %}
  </p>
  {% endif %}
  {% endif %}
</div>
{% endblock %}
