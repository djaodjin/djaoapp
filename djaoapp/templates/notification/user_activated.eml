{% extends "notification/base.eml" %}

{% block subject %}
{% trans user=user.username, broker=broker.printable_name %}Account for user {{user}} has been activated on {{broker}}{% endtrans %}
{% endblock %}

{% block plain_content %}
{% trans user=user.username %}Account for user {{user}} has been activated.{% endtrans %}
{% endblock %}

{% block html_content %}
<h3>{% trans %}An account was activated!{% endtrans %}</h3>
<p>
{% trans %}Full name{% endtrans %}: <b>{{user.printable_name}}</b>
<br>
{% trans %}Username{% endtrans %}: {% if urls and urls.user.profile %}<a href="{{urls.user.profile}}">{{user.username}}</a>{% else %}<b>{{user.username}}</b>{% endif %}
<br>
{% trans %}Email{% endtrans %}: {{email}}
</p>
{% endblock %}
